<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_1">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/text_1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_2">
        <item name="android:textColor">@color/text_2</item>
        <item name="android:textSize">@dimen/text_2</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_3">
        <item name="android:textColor">@color/text_3</item>
        <item name="android:textSize">@dimen/text_3</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="text_title">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="navigation_tab_inactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="navigation_tab_active">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="InputEdittext">
        <item name="android:layout_marginLeft">@dimen/padding_left</item>
        <item name="android:layout_marginRight">@dimen/padding_right</item>
        <item name="background">@drawable/bg_text</item>
        <item name="android:paddingLeft">@dimen/input_edittext_padding_left</item>
        <item name="android:textColor">@color/text_2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TintTextView">
        <item name="android:layout_marginLeft">@dimen/padding_left</item>
        <item name="android:textColor">@color/text_2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_edittext_height</item>
        <item name="background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
